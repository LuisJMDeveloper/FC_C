<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/CSS/CSSCoordinador.css"/>
</head>
<body style="margin:0; padding:0; box-sizing:border-box">
    <header>
        <nav class="navbar" style="background-color: #183A1D; padding: 15px 30px; color:white">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <h1 class="text" style="font-size:30px">Formación complementaria</h1>
                <div class="dropdown">

                    <a style="" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="d-flex justify-content-center align-items-center" style="background-color: #FEFBE9; width: 40px; height: 40px; border-radius: 50%; overflow:hidden">
                            <i class="bi bi-person-fill-gear" style="font-size:30px; text-decoration:none; color:black;"></i>
                        </div>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Perfil</a> <br /></li>

                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Cerrar sesión</a></li>
                    </ul>
                </div>

            </div>
        </nav>

        @*  Canvas de infromación de usuario *@
        <div class="offcanvas offcanvas-end " tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
            <div class="offcanvas-header" style="background-color: #168A45">
                <h4 class="offcanvas-title text-light">Perfil de usuario</h4>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
            </div>
            <div class="offcanvas-body">
                <div class="form-control-lg d-flex flex-column align-items-center">
                    
                    <div class="user-icon-max form-group mt-1">
                        <i style="font-size:100px" class="fa fa-user-circle-o"></i>
                    </div>
                    <br />
                    <div class="container-fluid d-flex justify-content-around mb-2">
                        
                        <button class="btn btn-warning btn-sm" type="button">
                            Actualizar
                        </button>
                        
                    </div>
                    
                    <label class="form-label me-3">Número de identificiaión</label>
                    <input class="form-control border-success shadow-success me-3" />

                    <label class="form-label me-3">Nombre de usuario</label>
                    <input class="form-control border-success shadow-success me-3" />

                    <label class="form-label me-3">Apellido de usuario</label>
                    <input class="form-control border-success shadow-success me-3" />

                    <label class="form-label me-3">Correo electrónico</label>
                    <input class="form-control border-success shadow-success me-3" />
                </div>
            </div>
        </div>
    </header>
    <div class="container-xxl">
        @RenderBody()

    </div>

    <footer>
        <div class="container d-flex justify-content-center align-items-center">
            <p>&copy; @DateTime.Now.Year - Formación Complementaria</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/complementos")
    @RenderSection("scripts", required: false)
</body>
</html>
